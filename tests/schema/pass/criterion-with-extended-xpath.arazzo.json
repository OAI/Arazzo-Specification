{
  "arazzo": "1.1.0",
  "info": {
    "title": "Criterion with XPath",
    "version": "1.3.0"
  },
  "sourceDescriptions": [
    {
      "name": "xmlAPI",
      "url": "https://example.com/xml-api.yaml",
      "type": "openapi"
    }
  ],
  "workflows": [
    {
      "workflowId": "xmlWorkflow",
      "steps": [
        {
          "stepId": "checkStatus",
          "operationId": "statusCall",
          "successCriteria": [
            {
              "context": "$response.body",
              "condition": "/Envelope/Status[text()='OK']",
              "type": {
                "type": "xpath",
                "version": "xpath-31"
              }
            }
          ]
        }
      ]
    }
  ]
}
